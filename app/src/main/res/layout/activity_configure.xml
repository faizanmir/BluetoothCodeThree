<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigureActivity"
    android:background="@drawable/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#80000000">

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:elevation="5dp"
        android:padding="5dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure your Remote !"
            android:textSize="25sp"
            android:textColor="#3E4041"
            android:layout_gravity="center"
            android:padding="5dp"

            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#A0C24A"
        app:cardCornerRadius="30dp"
        android:id="@+id/done">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Done"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="125dp">

        <android.support.v7.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|top"
            app:cardCornerRadius="37dp"
            android:layout_margin="20dp"
            android:id="@+id/blue"
            app:cardBackgroundColor="#0064ab"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:hint="A"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/blueText"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="37dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="20dp"
            android:id="@+id/orange"
            app:cardBackgroundColor="#ff6100"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:hint="A"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/orangeText"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|start"
            app:cardCornerRadius="37dp"
            android:layout_margin="20dp"
            android:id="@+id/red"
            app:cardBackgroundColor="#fc0014"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:hint="A"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/redText"
                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|bottom"
            app:cardCornerRadius="37dp"
            android:layout_margin="20dp"
            android:id="@+id/yellow"
            app:cardBackgroundColor="#ffaa00"
            app:cardElevation="5dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:hint="A"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/yellowText"
                />

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>




</RelativeLayout>